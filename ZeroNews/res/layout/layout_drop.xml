<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableRight="@drawable/phone1"
        android:drawablePadding="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="物流公司:圆通(EMS):"
        />
    <TextView 
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
         android:paddingLeft="10dp"
        android:text="运单号:72342873"
        android:layout_below="@id/tv_name"
        />
    <TextView 
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
         android:paddingLeft="10dp"
         android:paddingRight="30dp"
        android:text="最新信息:货件到达:纽约分拨中心"
        android:layout_below="@id/tv_number"
        />
    <View 
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#B4CDCD"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_msg"
        />
    <ListView 
        android:layout_below="@id/line"
        android:id="@+id/lv_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000"
        android:background="#E7E7E7"
        />
    <TextView 
        android:id="@+id/tv_top_slide"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#E9967A"
        android:drawableTop="@drawable/top_slid"
        android:gravity="center"
        android:text="上滑继续查询"
        />
</RelativeLayout>