<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/herder_user"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/parallax_img"
        android:scaleType="centerCrop"
        />
    <TextView 
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用以下方式登录"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:background="@drawable/et_bg"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@id/tv"
	    android:paddingLeft="20dp"
	    android:layout_centerHorizontal="true"
	    android:paddingRight="20dp"
	    >
	    <ImageView 
	        android:id="@+id/btn_weixin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/weixin"
	        android:textColor="#5E5E5E"
	        android:padding="15dp"
	        android:textSize="15sp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        />
	     <ImageView 
	        android:id="@+id/btn_sina"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/sina"
	         android:padding="15dp"
	        android:layout_weight="1"
	        android:textSize="15sp"
	        android:textColor="#5E5E5E"
	        android:layout_gravity="center"
	        />
	      <ImageView 
	        android:id="@+id/btn_qq"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qq"
	         android:padding="15dp"
	        android:layout_weight="1"
	        android:textSize="15sp"
	        android:textColor="#5E5E5E"
	        android:layout_gravity="center"
	        />
	       <ImageView 
	        android:id="@+id/btn_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/phone"
	         android:padding="15dp"
	        android:layout_weight="1"
	        android:textSize="15sp"
	        android:textColor="#5E5E5E"
	        android:layout_gravity="center"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerInParent="true"
	    android:gravity="center"
	    >
	    <ImageView 
	    android:id="@+id/imag_user"
	    android:layout_width="50dp" 
	    android:layout_height="50dp"
	    android:visibility="gone"
	    />
	<!-- <com.example.customdemo.view.ImageTextView 
		android:id="@+id/iv_username"	    
		android:layout_width="40dp"
		android:layout_height="60dp"
		android:visibility="gone"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="60dp"
	    /> -->
	    <TextView 
	        android:id="@+id/tv_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:layout_marginTop="10dp"
	        android:visibility="gone"
	        android:textColor="#ffffff"
	        />
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#33000000"
	    android:layout_alignParentBottom="true"
	    />
</RelativeLayout>