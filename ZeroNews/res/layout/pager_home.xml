<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <com.fanxi.zeronews.view.NoScrollViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </com.fanxi.zeronews.view.NoScrollViewPager>
       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A9B7B7" />-->
        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECF0F1"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/rb_news"
                android:drawableTop="@drawable/tab_news_selector"
                style="@style/rd_style"
                android:text="新闻"/>
          <!--  <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#A9B7B7" />-->
            <RadioButton
                android:id="@+id/rb_video"
                style="@style/rd_style"
                android:drawableTop="@drawable/tab_vedio_selector"
                android:text="视听" />
           <!-- <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#A9B7B7" />-->
            <RadioButton
                android:id="@+id/rb_service"
                style="@style/rd_style"
                android:drawableTop="@drawable/tab_service_selector"
                android:text="服务" />
        </RadioGroup>
</LinearLayout>